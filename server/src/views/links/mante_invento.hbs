<div class="container" style="margin-top: 25px;">
    <form action="/links/home/cambiar_nominvento" method="POST">
        <h5 style="color: darkred;">CAMBIAR NOMBRE DE INVENTO</h5>
        <div class="row g-3">            
            <div class="col">                
                <label for="inputEmail4" class="form-label">INVENTO:</label>
                <select class="form-select" name="invento_idd" aria-label="Default select example">
                    {{#each result}}
                        <option value="{{idd}}">{{nombre}}</option>
                    {{/each}}                    
                </select>
            </div>
            <div class="col">                
                <label for="inputEmail4" class="form-label" autocomplete="off">NUEVO NOMBRE:</label>
                <input type="text" name="newnom_invento" class="form-control" placeholder="NOMBRE" autocomplete="off">
            </div>
            <button class="btn btn-outline-success btn-block">CAMBIAR NOMBRE DE INVENTO</button>   
        </div>
    </form>
    <form action="/links/home/cambiar_anioinvento" method="POST" style="margin-top: 15px;">
        <h5 style="color: darkred;">CAMBIAR ANIO DE INVENTO</h5>
        <div class="row g-3">            
            <div class="col">                
                <label for="inputEmail4" class="form-label">INVENTO:</label>
                <select class="form-select" name="invento_idd" aria-label="Default select example">
                    {{#each result}}
                        <option value="{{idd}}">{{nombre}} , {{anio}}</option>
                    {{/each}}                    
                </select>
            </div>
            <div class="col">                
                <label for="inputEmail4" class="form-label" autocomplete="off">NUEVO ANIO:</label>
                <input type="text" name="newanio_invento" class="form-control" placeholder="NOMBRE" autocomplete="off">
            </div>
            <button class="btn btn-outline-success btn-block">CAMBIAR ANIO DE INVENTO</button>   
        </div>
    </form>
    <form action="/links/home/cambiar_inventorinvento" method="POST" style="margin-top: 15px;">
        <h5 style="color: darkred;">CAMBIAR INVENTOR DE INVENTO</h5>
        <div class="row g-3">            
            <div class="col">                
                <label for="inputEmail4" class="form-label">INVENTO:</label>
                <select class="form-select" name="invento_idd" aria-label="Default select example">
                    {{#each result}}
                        <option value="{{idd}}">{{nombre}}</option>
                    {{/each}}                    
                </select>
            </div>
            <div class="col">                
                <label for="inputEmail4" class="form-label">INVENTOR:</label>
                <select class="form-select" name="inventor_idd" aria-label="Default select example">
                    {{#each result2}}
                        <option value="{{idd}}">{{nombre}}</option>
                    {{/each}}                    
                </select>
            </div>
            <div class="col">                
                <label for="inputEmail4" class="form-label">NUEVO INVENTOR:</label>
                <select class="form-select" name="newinventor_idd" aria-label="Default select example">
                    {{#each result2}}
                        <option value="{{idd}}">{{nombre}}</option>
                    {{/each}}                    
                </select>
            </div>
            <button class="btn btn-outline-success btn-block">CAMBIAR INVENTOR</button>   
        </div>
    </form>
    <form action="/links/home/agregar_inventorinvento" method="POST" style="margin-top: 15px;">
        <h5 style="color: darkred;">AGREGAR INVENTOR A INVENTO</h5>
        <div class="row g-3">            
            <div class="col">                
                <label for="inputEmail4" class="form-label">INVENTO:</label>
                <select class="form-select" name="invento_idd" aria-label="Default select example">
                    {{#each result}}
                        <option value="{{idd}}">{{nombre}}</option>
                    {{/each}}                    
                </select>
            </div>
            <div class="col">                
                <label for="inputEmail4" class="form-label">INVENTOR:</label>
                <select class="form-select" name="inventor_idd" aria-label="Default select example">
                    {{#each result2}}
                        <option value="{{idd}}">{{nombre}}</option>
                    {{/each}}                    
                </select>
            </div>
            <button class="btn btn-outline-success btn-block">AGREGAR INVENTOR</button>   
        </div>
    </form>

    <h5 style="color: darkred; margin-top: 15px;">INVENTORES E INVENTOS:</h5>

    <table class="table table-dark" style="margin-top: 25px;">
        <thead>
            <tr>
                <th scope="col">INVENTOR</th>
                <th scope="col">INVENTO</th>
                <th scope="col">ANIO</th>
            </tr>
        </thead>
        <tbody>
            {{#each result3}}
                <tr>            
                    <td>{{inventor}}</td>
                    <td>{{invento}}</td>  
                    <td>{{anio}}</td>        
                </tr>
            {{/each}}
        </tbody>
    </table>

</div>