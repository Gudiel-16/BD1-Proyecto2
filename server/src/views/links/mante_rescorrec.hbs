<div class="container" style="margin-top: 25px;">
    <form action="/links/home/cambiar_rescorrec" method="POST">
        <h5 style="color: darkred;">CAMBIAR RESPUESTA CORRECTA DE PREGUNTA</h5>
        <div class="row g-3">
            <div class="col">                
                <label for="inputEmail4" class="form-label">PREGUNTA:</label>
                <select class="form-select" name="pregunta_idd" aria-label="Default select example">
                    {{#each result}}
                        <option value="{{idd}}">{{pregunta}}</option>
                    {{/each}}                    
                </select>
            </div>
            <div class="col">                
                <label for="inputEmail4" class="form-label">RESPUESTA:</label>
                <select class="form-select" name="respuesta_idd" aria-label="Default select example">
                    {{#each result2}}
                        <option value="{{idd}}">{{respuesta}}</option>
                    {{/each}}                    
                </select>
            </div>
            <div class="col">                
                <label for="inputEmail4" class="form-label">NUEVA RESPUESTA:</label>
                <select class="form-select" name="newrespuesta_idd" aria-label="Default select example">
                    {{#each result2}}
                        <option value="{{idd}}">{{respuesta}}</option>
                    {{/each}}                    
                </select>
            </div>    
            <button class="btn btn-outline-success btn-block">CAMBIAR RESPUESTA CORRECTA</button>   
        </div>
    </form>    

    <h5 style="color: darkred; margin-top: 15px;">PREGUNTAS CON RESPUESTAS CORRECTAS:</h5>

    <table class="table table-dark" style="margin-top: 25px;">
        <thead>
            <tr>
                <th scope="col">PREGUNTA</th>
                <th scope="col">RESPUESTA CORRECTA</th>
                <th scope="col">LETRA</th>
            </tr>
        </thead>
        <tbody>
            {{#each result3}}
                <tr>            
                    <td>{{pregunta}}</td>
                    <td>{{respuesta_correcta}}</td>  
                    <td>{{letra}}</td>        
                </tr>
            {{/each}}
        </tbody>
    </table>

    <h5 style="color: darkred;">PREGUNTAS CON DIFERENTES RESPUESTAS:</h5>

    <table class="table table-dark" style="margin-top: 25px;">
        <thead>
            <tr>
                <th scope="col">PREGUNTA</th>
                <th scope="col">RESPUESTA</th>
                <th scope="col">LETRA</th>
            </tr>
        </thead>
        <tbody>
            {{#each result4}}
                <tr>            
                    <td>{{pregunta}}</td>
                    <td>{{respuesta}}</td>  
                    <td>{{letra}}</td>        
                </tr>
            {{/each}}
        </tbody>
    </table>

</div>